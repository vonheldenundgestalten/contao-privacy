{
    "name": "vonheldenundgestalten/contao-privacy",
    "description": "Standalone package to deliver privacy related functions, cookie notice and updated templates for Analytics, Google Maps, YouTube and more.",
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Markus Milkereit",
            "email": "mm@vondheldenundgestalten.de",
            "role": "Developer"
        },
        {
            "name": "Marko Todić",
            "email": "drexplosiveweb@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Arben Husić",
            "email": "ah@vondheldenundgestalten.de",
            "role": "Developer"
        }
    ],
    "require": {
    	"contao/core-bundle": "4.9.*",
    	"vonheldenundgestalten/contao-basic": "4.9.*"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.3"
    },
    "extra": {
        "contao-manager-plugin": "VHUG\\Contao\\Privacy\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "VHUG\\Contao\\Privacy\\": "src"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "suggest": {
        "terminal42/changelanguage": "Simple language handling for Contao pages, news and content elements."
    }
}
